<Window x:Class="FinalFantasy7ItemManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalFantasy7ItemManager"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Item Manager" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding}" Grid.Column ="1"/>
        <Button x:Name="UpdateBtn" Content="Update" Click="UpdateBtn_Click" Grid.Row="1" Margin="350,20,350,20"/>
        <Button x:Name="RollBtn" Content="RollForDamageOnWeapon" Click="RollBtn_Click" Grid.Row="1" Height="70" Width="150" Margin="165,18,485,20"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
